version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    volumes:
      - ./:/var/www/html
    ports:
      - "8000:80"
    environment:
      APP_ENV: local
      APP_DEBUG: true
      APP_KEY: base64:your-app-key
      DB_CONNECTION: pgsql
      DB_HOST: host.docker.internal 
      DB_PORT: 5432
      DB_DATABASE: database
      DB_USERNAME: username
      DB_PASSWORD: password
    depends_on:
      - db

  db:
    image: postgres:15
    environment:
      DB_DATABASE: database
      DB_USERNAME: username
      DB_PASSWORD: password
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data

volumes:
  pgdata:
